<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GasNow" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_white</item>
        <item name="colorPrimaryVariant">@color/pastel_sky</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pastel_blue</item>
        <item name="colorSecondaryVariant">@color/pastel_pink</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="navigationTheme">
        
        <item name="colorPrimary">@color/light_white</item>
        <item name="colorControlHighlight">@color/darker_blue</item>

    </style>
</resources>