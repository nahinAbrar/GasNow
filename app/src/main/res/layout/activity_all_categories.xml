<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard.AllCategoriesActivity"
    android:background="@color/light_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/allCategoriesBackBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                app:tint="@color/darker_blue"
                android:src="@drawable/back_48"
                android:layout_centerVertical="true"
                android:contentDescription="@string/categories_back_button"
                />

            <ImageView
                android:id="@+id/allCategoriesSearchBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                app:tint="@color/black"
                android:src="@drawable/search_96"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/categories_back_button"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:fontFamily="@font/dosis_bold"
            android:text="Categories"
            android:padding="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/pastel_pink"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:fontFamily="@font/dosis"
                    android:padding="25dp"
                    android:text="Household Gas\nNeeds"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:padding="20dp"
                    android:fontFamily="@font/dosis"
                    android:layout_alignParentBottom="true"
                    android:text="Show All"/>




            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/card1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-40dp"

                />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="8dp"
            android:layout_margin="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:background="@color/pastel_yellow">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/card2"
                    android:layout_marginLeft="20dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:fontFamily="@font/dosis"
                    android:padding="25dp"
                    android:text="Vehicle Fuel"
                    android:layout_alignParentRight="true"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:padding="20dp"
                    android:fontFamily="@font/dosis"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="Show All"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/dark_blue"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:fontFamily="@font/dosis"
                    android:padding="25dp"
                    android:textColor="@color/light_white"
                    android:text="Business \nSolutions"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:padding="20dp"
                    android:fontFamily="@font/dosis"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/light_white"
                    android:text="Show All"/>




            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/card1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-40dp"

                />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>