<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemsDashBoard.ItemsDashboard"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemDashboardBackBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            app:tint="@color/darker_blue"
            android:src="@drawable/back_48"
            android:contentDescription="@string/itemdashboardbackbtn"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:fontFamily="@font/dosis_bold"
            android:text="@string/available_products"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemsDashRV01"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemsDashRV02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"/>


    </LinearLayout>

</ScrollView>