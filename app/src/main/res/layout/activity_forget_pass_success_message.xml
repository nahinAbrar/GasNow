<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassSuccessMessageActivity"
    android:padding="30dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/succsessBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/new_pass_back_button"
        android:padding="5dp"
        android:src="@drawable/back_48"
        app:tint="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:includeFontPadding="false"
            android:text="Password Updated"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textAlignment="center"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tick_96"
            android:layout_marginTop="50dp"
            app:tint="@color/black"
            android:layout_margin="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="@string/password_updated_successfully"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:background="@color/black"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:layout_marginTop="20dp"


            />



    </LinearLayout>

</LinearLayout>