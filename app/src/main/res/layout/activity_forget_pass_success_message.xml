<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordReset.ForgetPassSuccessMessageActivity"
    android:padding="30dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/succsessBackBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/new_pass_back_button"
        android:padding="5dp"
        android:src="@drawable/back_48"
        app:tint="@color/darker_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/dosis_bold"
            android:includeFontPadding="false"
            android:text="@string/password_updated"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textAlignment="center"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/welcomeAnimationView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/confirm"
            app:lottie_autoPlay="true"
            android:layout_margin="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dosis"
            android:includeFontPadding="false"
            android:text="@string/password_updated_successfully"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_design"
            android:fontFamily="sans-serif"
            android:onClick="CallLoginPage"
            android:text="@string/log_in"
            android:textColor="@color/white"


            />


    </LinearLayout>

</LinearLayout>