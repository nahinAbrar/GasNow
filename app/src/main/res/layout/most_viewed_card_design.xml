<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:elevation="8dp"
    android:layout_margin="12dp">
    
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mostViewed_Image1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/card1"
            android:scaleType="centerCrop"
            />
        
        <TextView
            android:id="@+id/mostViewed_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mostViewed_Image1"
            android:layout_marginStart="10dp"
            android:text="@string/gas_station"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            />

        <RatingBar
            android:id="@+id/mostViewed_Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/mostViewed_Title"
            android:layout_toEndOf="@id/mostViewed_Image1"
            android:layout_marginLeft="10dp"
            android:rating="5"/>

        <TextView
            android:id="@+id/dashboardMostviewed_Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum donor skadjasjdjdja"
            android:layout_below="@+id/mostViewed_Rating"
            android:layout_toRightOf="@id/mostViewed_Image1"
            android:padding="10dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>